{
    "name": "protonemedia/laravel-form-components",
    "description": "Blade components to rapidly build forms with Tailwind CSS Custom Forms and Bootstrap 4.",
    "keywords": [
        "protonemedia",
        "tailwind",
        "tailwindcss",
        "bootstrap",
        "bootstrap4",
        "bootstrap5",
        "bootstrap-4",
        "bootstrap-5",
        "laravel",
        "form",
        "forms",
        "form-builder",
        "form-components",
        "laravel-form-builder",
        "laravel-form-components"
    ],
    "homepage": "https://github.com/protonemedia/laravel-form-components",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pascal Baljet",
            "email": "pascal@protone.media",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0",
        "symfony/http-foundation": "^6.0"
    },
    "require-dev": {
        "livewire/livewire": "^2.11",
        "mockery/mockery": "^1.4.4",
        "nesbot/carbon": "^2.66",
        "orchestra/testbench-browser-kit": "^7.12",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-translatable": "^6.3",
        "symfony/dom-crawler": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "ProtoneMedia\\LaravelFormComponents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProtoneMedia\\LaravelFormComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "ProtoneMedia\\LaravelFormComponents\\Support\\ServiceProvider"
            ]
        }
    }
}
